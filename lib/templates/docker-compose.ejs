version: '3.7'
services:
  wp:
    depends_on:
      - db
    build: .
    <% if (resources) { %>
    <% if (resources.memory) { %>mem_limit: <%= resources.memory %><% } %>
    <% if (resources.cpu) { %>cpus: <%= resources.cpu %><% } %>
    <% } %>
    ports:
      - <%= port %>:80
    <% if (volumes) { %>volumes: <% volumes.forEach((volume) => { %>
      - <%= volume %> <% }); } %>
  db:
    image: mariadb
    environment:
      MYSQL_ALLOW_EMPTY_PASSWORD: 'yes'
      MYSQL_DATABASE: 'wordpress'
    ports:
      - <%= dbPort %>:3306
    volumes:
      - db:/var/lib/mysql
volumes:
  db: {}
